@import "nib"
@import url(http://fonts.googleapis.com/css?family=Quattrocento)

global-reset()

$background-color = rgb(43, 42, 43)
$text-color = #f5ece0

html
body
  overflow-x: hidden

body
  background: $background-color
  font-family: 'Quattrocento', serif
  color: $text-color
  letter-spacing: 1px
  font-size: 14px

a
  text-decoration: none

.section
  min-height: 768px
  position: relative

  &:nth-child(even)
    color: $background-color

    &:after
      position: absolute
      z-index: -1
      content: ''
      width: 120%
      height: 110%
      top: -5%
      left: 0%
      transform: perspective(600px) rotateY(4deg) translateZ(0)
      background: $text-color

.section--first
  min-height: 300px

.section--first__title
  position: absolute
  left: 0
  top: 50%
  font-size: 4em
  text-shadow: 0 1px 1px rgba(0, 0, 0, .5)
  text-align: center
  height: 100px
  line-height: 100px
  width: 100%
  margin-top: -150px
  letter-spacing: 2px

  span
    display: inline-block

.section--first__des
  width: 300px
  line-height: 24px
  font-size: 10px
  position: absolute
  left: 50%
  top: 50%
  margin-left: -100px
  margin-top: -80px
  opacity: .5

.section--first__code
  position: absolute
  top: -20px
  left: 10px
  width: 50%
  height: 100%
  overflow: hidden
  line-height: 1.5em
  pointer-events: none
  opacity: .2

.section--first__github
  width: 300px
  height: 40px
  line-height: 40px
  text-align: center
  font-size: 1.2em
  background: $text-color
  color: $background-color
  position: absolute
  right: -70px
  top: 60px
  transform: rotateZ(45deg)

  &:after
    content: ''
    position: absolute
    width: 100%
    left: 0
    bottom: 2px
    border-bottom: 1px $background-color dashed

  &:before
    content: ''
    position: absolute
    width: 100%
    left: 0
    top: 2px
    border-top: 1px $background-color dashed

.section--first__mouse
  position: absolute
  bottom: 30%
  left: 50%
  width: 60px
  height: 80px
  border: 1px $text-color solid
  margin-left: -40px
  border-radius: 40px 40px 45px 45px / 35px 35px 80px 80px

  &:before
    content: ''
    position: absolute
    width: 1px
    height: 300px
    background: $text-color
    bottom: -300px
    left: 50%

.section--first__mouse__wheel
  position: absolute
  left: 50%
  top: 8px
  width: 10px
  height: 20px
  margin-left: -5px
  border: 1px $text-color solid
  border-radius: 10px
  pointer-events: none

  &:after
    content: ''
    position: absolute
    width: 100%
    height: 0
    border-bottom: 1px $text-color solid
    left: 0
    animation-duration: 1s
    animation-name: wheel-animate
    animation-iteration-count: infinite
    transform: translateZ(0)

@keyframes wheel-animate
  from
    top: 8px
  to
    top: 12px
